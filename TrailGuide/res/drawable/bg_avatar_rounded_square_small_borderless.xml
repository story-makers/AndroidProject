<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/transparent" />
            <corners android:radius="@dimen/gen_avatar_corners_small" />
            <padding android:top="@dimen/gen_avatar_border_shadow" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/five_percent_black" />
            <corners android:radius="@dimen/gen_avatar_corners_small" />
            <padding android:left="@dimen/gen_avatar_border_shadow" android:top="@dimen/gen_avatar_border_shadow" android:right="@dimen/gen_avatar_border_shadow" android:bottom="@dimen/gen_avatar_border_shadow" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/ten_percent_black" />
            <corners android:radius="@dimen/gen_avatar_corners_small" />
            <padding android:left="@dimen/gen_avatar_border_shadow" android:right="@dimen/gen_avatar_border_shadow" android:bottom="@dimen/gen_avatar_border_shadow" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_default_avatar" />
            <corners android:radius="@dimen/gen_avatar_corners_large" />
        </shape>
    </item>
</layer-list>